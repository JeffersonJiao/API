<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3 login-form">
            <form method="POST" action="/auth/login">
                <div class="form-group">
                    <label for="username">Email:</label>
                    <input type="email" class="form-control" placeholder="Enter email" name="username">
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" class="form-control" placeholder="Enter password" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <a href="/register" class="btn btn-secondary float-right">Register</a>
            </form>
            <a href="/auth/google" class="btn btn-secondary">Log in with Google plus</a>
        </div>
    </div>
</div>
